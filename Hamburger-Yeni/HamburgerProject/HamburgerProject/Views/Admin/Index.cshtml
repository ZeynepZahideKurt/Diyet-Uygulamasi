
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminHomeLayout.cshtml";
}

@model ListVM


<div class="row">

    <div class="col">

        <table class="table table-bordered">

            <thead>

                <tr>

                    <th>

                        Id

                    </th>

                    <th>

                        Ürün Adı

                    </th>
                    <th>

                        Kategorisi

                    </th>

                    <th>

                        Tanımı

                    </th>
                    <th>

                        Fiyatı

                    </th>
 
                    <th>

                        İşlemler

                    </th>

                </tr>

            </thead>

            <tbody>

                @foreach (Product item in Model.Products)

                {

                    <tr>

                        <td>

                            @item.Id

                        </td>

                        <td>

                            @item.Name

                        </td>

                        <td>

                            @item.Category.CategoryName
                        </td>
                        <td>

                            @item.Description
                        </td>
                        <td>

                            @item.Price
                        </td>

                        <td>

                            <a class="btn btn-primary" asp-action="ProductUpdate" asp-route-id="@item.Id">Update </a>

                            <a class="btn btn-secondary" asp-action="ProductDelete" asp-route-id="@item.Id" onclick="return confirm('Bu dersi silmek istediğinize emin misiniz?')">Delete </a>

                        </td>

                    </tr>

                }

            </tbody>



        </table>
        <div> <a class="btn btn-primary" asp-action="ProductCreate">Ürün Ekle </a></div>
    </div>

</div>




