@{
    ViewData["Title"] = "Extra Ekle";
}
@model ListVM


<div class="row">

    <div class="col">

        <table class="table table-bordered">

            <thead>

                <tr>

                    <th>

                        Id

                    </th>

                    <th>

                        Name

                    </th>

                    <th>

                        Price

                    </th>

                    <th>

                        Operations

                    </th>

                </tr>

            </thead>

            <tbody>

                @foreach (Menu item in Model.Menus)

                {

                    <tr>

                        <td>

                            @item.Id

                        </td>

                        <td>

                            @item.Name

                        </td>

                        <td>

                            @item.Price
                        </td>

                        <td>

                            <a class="btn btn-primary" asp-action="MenuUpdate" asp-route-id="@item.Id">Update </a>

                            <a class="btn btn-secondary" asp-action="MenuDelete" asp-route-id="@item.Id" onclick="return confirm('Bu dersi silmek istediğinize emin misiniz?')">Delete </a>

                        </td>

                    </tr>

                }

            </tbody>



        </table>
        <div> <a class="btn btn-primary" asp-action="MenuCreate">Add </a></div>
    </div>

    <div class="col">

        <table class="table table-bordered">

            <thead>

                <tr>

                    <th>

                        Id

                    </th>

                    <th>

                        Name

                    </th>

                    <th>

                        Price

                    </th>

                    <th>

                        Operations

                    </th>

                </tr>

            </thead>

            <tbody>

                @foreach (Extra item in Model.Extras)

                {

                    <tr>

                        <td>

                            @item.Id

                        </td>

                        <td>

                            @item.Name

                        </td>

                        <td>

                            @item.Price

                        </td>

                        <td>

                            <a class="btn btn-primary" asp-action="ExtraUpdate" asp-route-id="@item.Id">Update </a>

                            <a class="btn btn-secondary" asp-action="ExtraDelete" asp-route-id="@item.Id" onclick="return confirm('Bu dersi silmek istediğinize emin misiniz?')">Delete </a>

                        </td>

                    </tr>

                }

            </tbody>



        </table>
        <div> <a class="btn btn-primary" asp-action="ExtraCreate" >Add </a></div>
    </div>



</div>


